<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvRoot"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/ivTribute"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:src="@color/tosca" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        android:includeFontPadding="false"
                        android:textSize="16sp"
                        android:text="@string/title_stunting_tribute"
                        android:textColor="@color/teks" />
                    <TextView
                        android:id="@+id/tvSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:maxLines="3"
                        android:text="Puskesmas"
                        android:textColor="@color/teks" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RatingBar
                            android:id="@+id/rbRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="?android:attr/ratingBarStyleSmall"
                            android:numStars="5"
                            android:rating="4.1"
                            />
                        <TextView
                            android:id="@+id/tvRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/medium"
                            android:layout_marginLeft="7dp"
                            android:includeFontPadding="false"
                            android:textSize="12sp"
                            android:text="(54)"
                            />
                    </LinearLayout>
<!--                    <Button-->
<!--                        android:id="@+id/btn_write_a_review"-->
<!--                        android:layout_width="90dp"-->
<!--                        android:layout_height="20dp"-->
<!--                        android:layout_marginTop="20dp"-->
<!--                        android:background="@drawable/button_border"-->
<!--                        android:text="Review"-->
<!--                        android:textColor="@color/menu_orange"-->
<!--                        android:textSize="10sp"-->
<!--                        tools:ignore="TouchTargetSizeCheck" />-->

                </LinearLayout>
            </LinearLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>